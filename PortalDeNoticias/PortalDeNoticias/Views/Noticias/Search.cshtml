@model IEnumerable<PortalDeNoticias.Models.Noticia>

@{
    ViewData["Title"] = "Pesquisa de Notícias";
}

<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="textoConsulta">Consulta</label>
                    <input type="text" class="form-control" name="textoConsulta" value=@ViewData["textoConsulta"] />
                </div>
                <button type="submit" class="btn btn-primary">Consultar</button>
            </div>            
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Notícias encontradas</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Titulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Texto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Autor)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Texto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Autor.Nome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>